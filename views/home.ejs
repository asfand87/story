<% layout('layouts/boilerplate') -%>
<div class="container home__index min-vh-100">
  <div class="row mt-5" id="home__page">
    <div class="col-lg-6 col-md-6 col-sm-6 my-5 d-flex justify-content-center">
      <form action="/" method="GET" class="ml-auto">
        <input
          class="p-2"
          type="text"
          placeholder="type in here"
          name="search"
        />
        <button class="p-2"><i class="fas fa-search">Search Stories</i></button>
      </form>
    </div>
  </div>

  <div class="row search__button">
    <div class="col-lg-2 col-md-2 col-sm-2">
      <a href="/story" class="btn btn-primary w-100"> go to stories </a>
    </div>
  </div>
</div>
