<% layout('layouts/boilerplate') -%>

<div class="container min-vh-100">
  <h1 class="text-center mt-3">Edit Story</h1>
  <div class="row my-5 gy-5">
    <div class="col-lg-6 offset-3 border">
      <form
        action="/story/<%=story._id %>?_method=PUT "
        method="POST"
        class="validated-form"
        novalidate
      >
        <div class="mb-3">
          <label for="name">Title </label>
          <input
            type="text"
            name="story[title]"
            class="form-control"
            placeholder="title"
            value="<%=story.title %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="image">Image</label>
          <input
            type="text"
            name="story[image]"
            class="form-control"
            placeholder="image"
            id="image"
            value="<%=story.image%>  "
            required
          />
        </div>
        <div class="mb-3">
          <label for="location">Location</label>
          <input
            type="text"
            name="story[location]"
            class="form-control"
            placeholder="Location"
            id="location"
            value="<%=story.location%>  "
            required
          />
        </div>
        <div class="mb-3">
          <label for="description">Description</label>
          <textarea
            type="text"
            name="story[description]"
            class="form-control"
            placeholder="Description"
            id="description"
            required
          >
<%=story.description %> </textarea
          >
        </div>
        <button class="btn btn-primary btn-success">Submit</button>
        <button type="submit" class="btn btn-secondary" href="/">
          Cancell
        </button>
      </form>
    </div>
  </div>
</div>
