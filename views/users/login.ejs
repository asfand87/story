<% layout('layouts/boilerplate') -%>

<div class="container min-vh-100">
  <div class="row">
    <div class="col-4 offset-4">
      <h4 class="my-5 text-center">Please Login to continue!</h4>
      <form action="/login" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
          <label for="username">Username</label>
          <input
            id="username"
            type="text"
            name="username"
            class="form-control"
            placeholder="Please enter new username"
            value=""
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
          <label for="password">Password</label>
          <input
            id="password"
            type="password"
            name="password"
            class="form-control"
            placeholder="Enter new password"
            value=""
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="login-button d-flex justify-content-between">
          <button class="btn btn-primary">Login</button>
          <a href="/forgot">forgot password</a>
        </div>
      </form>
    </div>
  </div>
</div>
