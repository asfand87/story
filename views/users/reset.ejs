<% layout('layouts/boilerplate') -%>
<div class="container min-vh-100">
  <div class="row">
    <div class="col-4 offset-4 mt-5">
      <form action="/reset/<%= token %>" method="POST">
        <legend class="text-center my-3">Reset Password</legend>
        <div class="form-group mt-5">
          <label for="password" class="my-2">New Password</label>
          <input
            type="password"
            name="password"
            pattern="(?=\S*[a-z])(?=\S*[A-Z])(?=\S*\d)(?=\S*[^\w\s])\S{8,30}"
            title="Must be 8 characters long, must have one upperCase, one lowerCase,
            one special character[',#,!,%'] and no longer than 30 characters"
            value=""
            placeholder="New password"
            autofocus="autofocus"
            class="form-control"
            required
          />
        </div>
        <div class="valid-feedback">Looks Good!</div>
        <div class="form-group">
          <label for="confirm" class="my-2">Confirm Password</label>
          <input
            type="password"
            name="confirm"
            pattern="(?=\S*[a-z])(?=\S*[A-Z])(?=\S*\d)(?=\S*[^\w\s])\S{8,30}"
            title="Must be 8 characters long, must have one upperCase, one lowerCase,
            one special character[',#,!,%'] and no longer than 30 characters"
            value=""
            placeholder="Confirm password"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="form-group mt-2">
          <button type="submit" class="btn btn-primary w-100">Reset</button>
        </div>
      </form>
    </div>
  </div>
</div>
